<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_height"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context="com.compet.bpdiaryexample.UpdateHeightActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:paddingLeft="26dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="키를 입력해주세요." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:visibility="gone">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_profile_shape"
                    android:gravity="center"
                    android:hint="키"
                    android:textColor="#313131"
                    android:textColorHint="#bab9b9" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_inch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible">

                <EditText
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_profile_shape"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="#313131" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="\u05f3"
                    android:textColor="#313131"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:background="@drawable/edit_profile_shape"
                    android:gravity="center"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="\u05f4"
                    android:textColor="#313131"
                    android:textSize="18sp" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="11dp"
                android:entries="@array/height">

            </Spinner>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
