<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting_goal"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.compet.bpdiaryexample.SettingGoalActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:id="@+id/layout_pressure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_layout_height"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:text="혈압목표"
            android:textColor="#000000"
            android:textSize="@dimen/profile_text_size" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_marginRight="27.2dp"
            android:src="@drawable/ic_device_list" />

    </RelativeLayout>

    <View
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efebe6" />

    <RelativeLayout
        android:id="@+id/layout_weight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_layout_height"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:text="체중목표"
            android:textColor="#000000"
            android:textSize="@dimen/profile_text_size" />

        <ImageView
            android:id="@+id/ic_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_centerVertical="true"
            android:layout_marginRight="27.2dp"
            android:src="@drawable/ic_device_list" />

    </RelativeLayout>

    <View
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efebe6" />


    <RelativeLayout
        android:id="@+id/layout_blood_sugar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_layout_height"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:layout_centerVertical="true"
            android:text="혈당목표"
            android:textColor="#000000"
            android:textSize="@dimen/profile_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_marginRight="27.2dp"
            android:src="@drawable/ic_device_list" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efebe6" />




</LinearLayout>
